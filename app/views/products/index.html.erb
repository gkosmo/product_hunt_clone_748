<div class="container">
    <h1>Awesome Products</h1>
    <div class="row">
        <% @products.each do |product| %>
        <div class="col-4">
                <div class="card card-body">
                    <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
                    <div class="card-product-infos">
                        <h2><%= product.name %></h2>
                        <p><%= product.tagline %></p>
                    </div>
                </div>
        </div>
        <% end %>
    </div>
</div>